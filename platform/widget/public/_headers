# Security Headers for Cloudflare Pages
# Reference: https://developers.cloudflare.com/pages/configuration/headers/

/*
  # X-Frame-Options removed to allow embedding in clinic demo pages
  # Security is maintained via CSP frame-ancestors instead
  
  # Enable browser XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Force HTTPS for 1 year (including subdomains)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy - allows Stripe, Supabase, Turnstile, and common resources
  # frame-ancestors allows embedding from clinic-demos.pages.dev
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://*.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://*.supabase.co https://api.stripe.com wss://*.supabase.co https://challenges.cloudflare.com; frame-src 'self' https://js.stripe.com https://hooks.stripe.com https://challenges.cloudflare.com; frame-ancestors 'self' https://clinic-demos.pages.dev https://*.clinic-demos.pages.dev; object-src 'none'; base-uri 'self'; form-action 'self'
  
  # Disable browser caching for HTML pages (for freshness)
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  
  # Permissions Policy (modern replacement for Feature-Policy)
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(self "https://js.stripe.com")

# Cache static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
